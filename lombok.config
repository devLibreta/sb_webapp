# lombok.config 설정 파일 예제
# Lombok 애노테이션 사용 정책 및 생성 코드 처리 방식을 정의

# @Setter 사용 시 컴파일 에러 (무분별한 setter 생성을 막기 위함)
lombok.Setter.flagUsage = error

# @AllArgsConstructor 사용 시 컴파일 에러 (모든 필드 생성자 남용 방지)
lombok.AllArgsConstructor.flagUsage = error

# @Data 사용 시 컴파일 에러 (자동 생성 범위가 너무 넓어 설계 의도 불명확해짐)
lombok.data.flagUsage = error

# Lombok이 만든 코드에 @lombok.Generated 애노테이션 추가
# (코드 커버리지/정적 분석 도구에서 자동 생성 코드 무시 가능)
lombok.addLombokGeneratedAnnotation = true